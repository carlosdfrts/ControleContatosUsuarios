@using ControleContatos.Enums
@model UsuarioModel
@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="text-center">

    <h1 class="display-4">Editar Contato</h1>

    <form asp-controller="Usuario" asp-action="Alterar" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuário">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>

        <div class="form-group">
            <label for="e-mail">E-mail</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do usuário">
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="form-group">
            <label for="login">Login</label>
            <input type="text" asp-for="Login" class="form-control w-100 mb-2" placeholder="Digite o login do usuário">
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div class="form-group">
            <label for="perfil">Perfil</label>
            <select class="form-control" asp-for="Perfil">
                <option value="">- Selecione -</option>
                <option value="@PerfilEnum.Admin">Administrador</option>
                <option value="@PerfilEnum.Usuario">Usuario</option>
            </select>
            @Html.ValidationMessageFor(x => x.Perfil)
        </div>
        <br />
        <button type="submit" class="btn btn-primary w-100 mb-2">Salvar</button>
        <a role="button" class="btn btn-secondary w-100 mb-2" asp-controller="Usuario" asp-action="Index">Voltar</a>
    </form>

</div>

