@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação exclusão do usuário";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuário @Model.Nome ?</h3>
    <br />
</div>

<a role="button" class="btn btn-danger w-100 mb-2" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
<a role="button" class="btn btn-primary w-100 mb-2" asp-controller="Usuario" asp-action="Index" >Cancelar exclusão</a>